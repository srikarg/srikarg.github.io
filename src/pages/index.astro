---
import PageLayout from '../layouts/Page.astro'
import { Icon } from 'astro-icon/components'
import { links } from '../../siteConfig.json'
---

<PageLayout>
  <main class="flex w-full grow flex-col items-center justify-center p-6">
    <div
      class="flex flex-col items-center justify-evenly bg-yellow-500 p-8 text-center shadow-2xl transition-transform duration-300 hover:scale-110 sm:aspect-video dark:bg-amber-500"
    >
      <h1
        class="font-display border-8 border-red-800 p-2 text-4xl font-bold uppercase sm:p-4 sm:text-5xl sm:tracking-wide md:text-7xl dark:border-slate-800"
      >
        Srikar Gudipati
      </h1>
      <h2
        class="font-display text-xl font-bold uppercase sm:tracking-wider md:text-3xl"
      >
        Fullstack Software Engineer
      </h2>

      <section class="flex w-full justify-evenly space-x-1 self-center">
        <a href={`mailto:${links.email}?subject=Hey%20There!`}>
          <Icon
            name="mdi:email"
            class="h-9 w-full rounded-full bg-red-800 p-2 text-white hover:scale-110 md:h-12 dark:bg-slate-800"
          />
        </a>

        <a href={`https://github.com/${links.github}`}>
          <Icon
            name="mdi:github"
            class="h-9 w-full rounded-full bg-red-800 p-2 text-white hover:scale-110 md:h-12 dark:bg-slate-800"
          />
        </a>

        <a href={`https://www.linkedin.com/in/${links.linkedin}`}>
          <Icon
            name="mdi:linkedin"
            class="h-9 w-full rounded-full bg-red-800 p-2 text-white hover:scale-110 md:h-12 dark:bg-slate-800"
          />
        </a>

        <a href={`https://codepen.io/${links.codepen}`}>
          <Icon
            name="fe:codepen"
            class="h-9 w-full rounded-full bg-red-800 p-2 text-white hover:scale-110 md:h-12 dark:bg-slate-800"
          />
        </a>
      </section>
    </div>
  </main>
</PageLayout>
